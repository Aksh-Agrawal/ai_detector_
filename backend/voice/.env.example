# Environment variables for Voice Agent
# Copy this to .env and fill in your API keys

# Sarvam AI API Key
# Get from: https://www.sarvam.ai/
SARVAM_API_KEY=your_sarvam_api_key_here

# Google Gemini API Key (FREE - 2M tokens/min)
# Get from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Connection
REDIS_URL=redis://localhost:6379

# Server Configuration
VOICE_SERVER_HOST=0.0.0.0
VOICE_SERVER_PORT=8001

# Flask Backend (existing)
FLASK_PORT=8000

# Rate Limiting
MAX_VOICE_REQUESTS_PER_HOUR=60
MAX_CONCURRENT_SESSIONS=2
MAX_AUDIO_DURATION_SECONDS=300

# Session Configuration
SESSION_TTL_SECONDS=600

# Logging
LOG_LEVEL=INFO
